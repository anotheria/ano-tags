	<modelVersion>4.0.0</modelVersion>
	<groupId>net.anotheria</groupId>
	<artifactId>ano-tags</artifactId>
	<version>2.1.3-SNAPSHOT</version>
	<name>anotheria.net taglibs</name>

	<build>
